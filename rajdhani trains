class Train:
    def __init__(self,name,fare,seats):
        self.name=name
        self.fare=fare
        self.seats=seats
    def printdeatails(self):
        print(f"the train name is {self.name} and fare is {self.fare} and the availabity of seats is {self.seats}")

intercity=Train("intercity",340,500)
rajdhani=Train("rajdhani",590,800)

print(intercity.printdeatails())
rajdhani.printdeatails()



